<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_drawer_background"
    android:padding="@dimen/activity_padding">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/info_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/material_drawer_hint_text">

        <EditText
            android:id="@+id/infoTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/input_text_size"
            android:maxLength="23"
            android:enabled="false"
            android:hint="Заголовок" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/info_layout_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/material_drawer_hint_text">

        <EditText
            android:id="@+id/infoTaskDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/input_text_size"
            android:enabled="false"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:maxLength="120"
            android:hint="Подробности" />


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/info_layout_name_worker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/material_drawer_hint_text">

        <EditText
            android:id="@+id/infoTaskWorker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/input_text_size"
            android:inputType="textEmailAddress"
            android:enabled="false"
            android:hint="Исполнитель" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/info_layout_name_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/material_drawer_hint_text">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="@dimen/input_text_size"
            android:singleLine="true"
            android:maxLength="2"
            android:id="@+id/infoTaskCost"
            android:enabled="false"
            android:hint="Стоимость" />


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/info_layout_name_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/material_drawer_hint_text">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:singleLine="true"
            android:textSize="@dimen/input_text_size"
            android:id="@+id/infoTaskDate"
            android:enabled="false"
            android:hint="Крайний срок" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/readyTask"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        style="@style/CustomTheme.Button"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="14sp"
        android:text="Готово"
        android:onClick="onReadyTask"
        />

    <Button
        android:id="@+id/cancelTask"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        style="@style/CustomTheme.Button"
        android:layout_marginBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="14sp"
        android:text="Отменить"
        android:onClick="onCancelTask"
        />

</LinearLayout>
    </ScrollView>