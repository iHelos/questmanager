<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_drawer_background"
    android:padding="@dimen/activity_padding">


    <TextView
        android:id="@+id/reportTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_above="@+id/reportCoin"
        android:textSize="18sp"
        android:focusable="false"

        />
<!--<RelativeLayout-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content">-->

    <ImageView
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:id="@+id/reportCoin"
        android:foregroundGravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/reportDateSend"


        />
    <!--android:src="@drawable/coin"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reportCoinCost"
        android:paddingTop="36dp"

        android:layout_alignTop="@+id/reportCoin"
        android:layout_alignLeft="@+id/reportCoin"
        android:layout_alignEnd="@+id/reportCoin"
        android:layout_alignRight="@+id/reportCoin"
        android:layout_alignStart="@+id/reportCoin"

        android:layout_above="@+id/reportDateSend"
        android:gravity="center_horizontal"
        android:textSize="72sp"


        android:text="75"
        />

<!--</RelativeLayout>-->

    <!--android:layout_alignBottom="@+id/reportCoin"-->

    <!--android:layout_alignLeft="@+id/reportCoin"-->
    <!--android:layout_alignEnd="@+id/reportCoin"-->
    <!--android:layout_alignRight="@+id/reportCoin"-->
    <!--android:layout_alignStart="@+id/reportCoin"-->


    <TextView
        android:id="@+id/reportDateSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/report_input_layout_name_details"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:lines="2"
        android:focusable="false"
        />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/report_input_layout_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/material_drawer_hint_text"
        android:layout_above="@+id/sendReport"
        app:counterEnabled="true"
        app:counterMaxLength="120"
        app:counterTextAppearance="@style/counterText"
        app:counterOverflowTextAppearance="@style/counterOverride"
       >

        <EditText
            android:id="@+id/reportDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/input_text_size"


            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="3"

            android:maxLength="120"
            android:hint="Подробности" />

        <!--<TextView-->
            <!--android:id="@+id/countReportDetailsTextView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="3dp"-->
            <!--android:layout_marginEnd="3dp"-->
            <!--android:gravity="right"-->
            <!--android:textSize="@dimen/counter_size"-->
            <!--android:textColor="@color/material_drawer_hint_text"-->
            <!--/>-->
    </android.support.design.widget.TextInputLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отправить"
        android:textColor="@color/material_drawer_dark_primary_text"
        android:id="@+id/sendReport"
        android:background="@color/material_drawer_primary"
        android:layout_alignParentBottom="true"

        android:onClick="onReportSendClick"/>
</RelativeLayout>
</ScrollView>