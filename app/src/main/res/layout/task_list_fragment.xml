<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refreshOutputTasks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
<android.support.design.widget.CoordinatorLayout

xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinatorLayoutBTLF"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/empty_list_msg"
        android:id="@+id/nope"
        android:layout_margin="@dimen/text_view_horizontal_margin"
        android:textColor="@color/textColorSecondary"
        android:textSize="@dimen/text_message_size"
        android:visibility="invisible">
    </TextView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv"
        />

    <include android:id="@+id/add"
        layout="@layout/floating_button_add"
        />


</android.support.design.widget.CoordinatorLayout>

    </android.support.v4.widget.SwipeRefreshLayout>