<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_drawer_background"
    android:padding="3dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/material_drawer_hint_text">

        <EditText
            android:id="@+id/createTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/material_drawer_primary_text"
            android:maxLength="23"
            android:lineSpacingMultiplier="1.8"
            android:hint="Заголовок" />

        <TextView
            android:id="@+id/countTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:gravity="right"
            android:textSize="12sp"
            />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/material_drawer_hint_text">

        <EditText
            android:id="@+id/createTaskDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/material_drawer_primary_text"
            android:lineSpacingMultiplier="1.8"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:maxLength="120"
            android:hint="Подробности" />

        <TextView
            android:id="@+id/countDetailsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:gravity="right"
            android:textSize="12sp"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name_worker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/material_drawer_hint_text">

        <EditText
            android:id="@+id/createTaskWorker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/material_drawer_primary_text"
            android:maxLength="23"
            android:lineSpacingMultiplier="1.8"
            android:inputType="textEmailAddress"
            android:hint="Исполнитель" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/material_drawer_hint_text">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:maxLength="2"
            android:id="@+id/createTaskCost"
            android:hint="Стоимость" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/material_drawer_hint_text">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:singleLine="true"
            android:id="@+id/dateEdit"
            android:focusable="false"
            android:hint="Крайний срок" />

    </android.support.design.widget.TextInputLayout>

